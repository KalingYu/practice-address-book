        xmlns:local="clr-namespace:Tonxinlu"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="600">
    <Grid>
        <TextBlock x:Name="textBox" Foreground="#fff" Background="#FF03A9F4" Padding="18"  VerticalAlignment="Top" FontSize="48" HorizontalAlignment="Center" Height="100" Margin="1,-1,-0.4,271.4" TextWrapping="Wrap"  Block.TextAlignment="Center"  Width="593"  ><Run Text="用户"/><Run Text="注册"/></TextBlock>
