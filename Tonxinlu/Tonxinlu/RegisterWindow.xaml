        <TextBox x:Name="userBox" Padding="7" HorizontalAlignment="Left" Height="30" Margin="197,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
        <TextBox x:Name="passwordBox" Padding="7" HorizontalAlignment="Left" Margin="196,205,0,0" VerticalAlignment="Top" Width="245" Height="30"/>
        <Image x:Name="image1" Source="icon/iconfont-mima-once.png" HorizontalAlignment="Left" Height="30" Margin="153,205,0,0" VerticalAlignment="Top" Width="30"/>
