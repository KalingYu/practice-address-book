        <Image x:Name="image1_Copy" Source="icon/iconfont-mima.png" HorizontalAlignment="Left" Height="30" Margin="152,266,0,0" VerticalAlignment="Top" Width="30"/>
        <Button x:Name="button" Content="注册" Click="button1_Click" Background="#FF0288D1" FontSize="18" Foreground="#fff" HorizontalAlignment="Left" Margin="147,329,0,0" VerticalAlignment="Top" Width="115" Height="40" BorderThickness="0"/>
        <Button x:Name="button1" Content="登录" Click="button1_Click" FontSize="18" Background="#cccccc" Foreground="#fff" HorizontalAlignment="Left" Margin="322,332,0,0" VerticalAlignment="Top" Width="115" Height="40" BorderThickness="0"/>
